<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp">
<TextView
    android:id="@+id/item_find_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="阳子萌："
    android:textSize="22sp"
    android:textColor="#000"
    android:padding="10dp"/>
    <TextView
        android:id="@+id/item_find_is"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已回复"
        android:gravity="right"
        android:textSize="22sp"
        android:textColor="#ff0000"
        android:padding="10dp"/>
    <TextView
    android:id="@+id/item_find_msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e4e3e3"
    android:layout_below="@id/item_find_name"
    android:text="萌大人好帅啊！"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/item_find_msg_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e4e3e3"
        android:layout_below="@id/item_find_msg"
        android:text="管理员回复：萌大人好帅啊！"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#fa0000"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/item_find_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000"
        android:layout_below="@+id/item_find_msg_admin"
        android:text="2019-05-20 00:00:00"
        android:padding="10dp"/>
</RelativeLayout>