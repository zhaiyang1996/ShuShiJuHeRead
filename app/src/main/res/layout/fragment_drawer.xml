<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorBackground">
    <com.zhai.shuyangwx.view.RoundImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>
</RelativeLayout>
        <Button
            android:id="@+id/drawer_vod"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_aboutus"
            android:text="神秘传送门"
            android:textSize="22sp"
            android:textColor="#000"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"/>
        <Button
            android:id="@+id/drawer_vod_acc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_aboutus"
            android:text="放映厅"
            android:textSize="22sp"
            android:textColor="#000"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"/>
        <Button
            android:id="@+id/drawer_me"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_aboutus"
            android:text="关于我们"
            android:textSize="22sp"
            android:textColor="#000"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"/>
        <Button
            android:id="@+id/drawer_iqy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_aboutus"
            android:text="自定义启动页"
            android:textSize="22sp"
            android:textColor="#000"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"/>
        <Button
            android:id="@+id/drawer_books"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_aboutus"
            android:text="导入本地书籍"
            android:textSize="22sp"
            android:textColor="#000"
            android:gravity="center"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>